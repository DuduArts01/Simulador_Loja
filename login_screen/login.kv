    StackLayout:
        orientation: "tb-lr"

        MDBoxLayout:
            orientation: "vertical"
            size_hint_y: .75
            spacing: 20

            Widget:
            MDLabel:
                text: "Login"
                font_style: "H3"
                halign: "center"

            Widget:

