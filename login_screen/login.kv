                pos_hint: {"center_x": .5}
            
            MDTextField:
                size_hint: .75, None
                hint_text: "Password"
                pos_hint: {"center_x": .5}

            Widget:

            MDRaisedButton:
                text: "Login"
                pos_hint: {"center_x": .5}
 
