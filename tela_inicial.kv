 #: include tela2.kv

#: import Menu tela2.Menu

Gerenciador:
    # Simulador_loja.py / tela_inicial.kv
    Menu_Principal:
    # tela2.kv/py
    Menu:

<Menu_Principal>:
    name: 'Menu_Principal'
    GridLayout:
        id: gridlayout
        # top to bottom, left to right ( de cima para baixo, esquerda para a direita )
        cols: 1
        MDTopAppBar:
            title: 'Lojinha'
            anchor_title: 'center'
            right_action_items: [["magnify", lambda x: print("lupa :D")], ["cart-variant"]] 

        MDBoxLayout:
            id: box
            adaptive_size: True
            spacing: "56dp"
            pos_hint: {"center_x": .5, "center_y": .5}
   
<MD3Card>
    padding: 16
    size_hint: None, None
    size: "200dp", "100dp"

    MDRelativeLayout:
        size_hint: None, None
        size: root.size

        MDIconButton:
            icon: "dots-vertical"
            pos:
                root.width - (self.width + root.padding[0] + dp(4)),                     root.height - (self.height + root.padding[0] + dp(4))

        MDLabel:
            id: label
            text: root.text
            adaptive_size: True
            color: .2, .2, .2, .8

  
