Gerenciador:

    # Simulador_loja.py / tela_inicial.kv
    Menu_Principal:

    # tela2.kv/py
    Menu:

    # product_screen.py
    ProductInfo:

    # login.py/kv    
    Login:

    # shopping_cart.py/kv
    Shopping_Cart:


<Menu_Principal>:
    name: 'Menu_Principal'
    GridLayout:
        cols: 1
 
        MDTopAppBar:
            title: 'Lojinha'
            anchor_title: 'center'
            left_action_items: [["account", lambda x: root.open_login()]] 
            right_action_items: [["magnify", lambda x: print("lupa :D")], ["cart-variant", lambda x: root.open_cart()]] 
               

        ScrollView:
            id: card_scroll
            GridLayout:
                id: cards
                size_hint: 1, None
                height: self.minimum_height
                spacing: 0
                padding: 1
                cols: 1

<MD3Card>
    padding: 1
    size_hint: .5, None
    radius: 0

    MDBoxLayout:
        size_hint: 1, 1

        FitImage:
            source: "./src/cards/aaaa.png"
            size_hint: 1, 1
        
        
        MDLabel:
            text: 'Nome do produto'
            text_size: self.width, None
            height: self.texture_size[1]
            pos_hint: {"center_y": .85}



        MDLabel:
            id: label
            text: "Vendedor"
            adaptive_size: True
            color: .2, .2, .2, .8


  
