Gerenciador:

    # Simulador_loja.py / tela_inicial.kv
    Menu_Principal:

    # tela2.kv/py
    Menu:

    # product_screen.py
    ProductInfo:

    # login.py/kv    
    Login:

<Menu_Principal>:
    name: 'Menu_Principal'
    GridLayout:
        cols: 1

        MDTopAppBar:
            title: 'Lojinha'
            anchor_title: 'center'
            left_action_items: [["account", lambda x: root.open_login()]] 
            right_action_items: [["magnify", lambda x: print("lupa :D")], ["cart-variant"]] 

        ScrollView:
            id: card_scroll
            GridLayout:
                id: cards
                size_hint: 1, None
                height: self.minimum_height
                spacing: 5
                padding: 1
                cols: 2

<MD3Card>
    padding: 3
    size_hint: .5, None

    MDRelativeLayout:
        size_hint: 1, 1

        FitImage:
            source: "./src/cards/esponja.jpg"
            size_hint: 1, 1

        MDFlatButton:
            size_hint: 1, 1
            on_release: print(root.text)

        MDIconButton:
            # gotta add a dropbar to the icon
            icon: "dots-vertical"
            pos:
                root.width - (self.width + root.padding[0] + dp(4)),root.height - (self.height + root.padding[0] + dp(4))
            on_release: lambda x: print(":D")


        MDLabel:
            id: label
            text: root.text
            adaptive_size: True
            color: .2, .2, .2, .8

  
